<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OtpVerification">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="300dp"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter one time password sent to you"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/edtNumber1"
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:background="@drawable/call_border"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textStyle="bold"
        android:textSize="24sp"
        tools:ignore="LabelFor"
        />
        <EditText
            android:id="@+id/edtNumber2"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/call_border"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:ignore="LabelFor"
            />
        <EditText
            android:id="@+id/edtNumber3"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:ignore="LabelFor"
            android:background="@drawable/call_border"
            />
        <EditText
            android:id="@+id/edtNumber4"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:ignore="LabelFor"
            android:background="@drawable/call_border"
            />
        <EditText
            android:id="@+id/edtNumber5"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:ignore="LabelFor"
            android:background="@drawable/call_border"
            />
        <EditText
            android:id="@+id/edtNumber6"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:ignore="LabelFor"
            android:background="@drawable/call_border"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
    <Button
        android:id="@+id/btnSubmitOtp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit"
        android:background="@drawable/border"
        android:textSize="20sp"
        />
    <ProgressBar
        android:id="@+id/progressBarVerfiyOtp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/theme_light_blue"
        android:visibility="gone" />
    </FrameLayout>

</LinearLayout>